<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>mvc04</display-name>
  <welcome-file-list>
    <welcome-file>index.bit</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>bbslist</servlet-name>
  	<servlet-class>com.bit.controller.bbsController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>bbslist</servlet-name>
  	<url-pattern>/bbs/list.bit</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>guestlist</servlet-name>
  	<servlet-class>com.bit.controller.guestController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>guestlist</servlet-name>
  	<url-pattern>/guest/list.bit</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.bit.controller.loginController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login/form.bit</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>index</servlet-name>
  	<servlet-class>com.bit.controller.indexController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>index</servlet-name>
  	<url-pattern>/index.bit</url-pattern>
  </servlet-mapping>
</web-app>